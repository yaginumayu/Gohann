<h1>子どもの好き嫌いに悩むお父さん、お母さんへ</h1>


<%= page_entries_info @posts %>
<%= paginate @posts %>

<div class="posts-container">

  <% @posts.each do |t| %>
    <div class="post">
    <%= t.user.email %>
    <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.name %>
      <%= t.genre %>
      <%= t.about %>
      <%= t.image %>
      <% if user_signed_in? %>
      <% if current_user.already_liked?(t) %>
         <%= link_to post_like_path(id: t.id, post_id: t.id), method: :delete do %>
          <i class="fa-solid fa-apple-whole" style="color: #fa2934;"></i><%= t.likes.count %>
         <% end %>
      <% else %>
         <%= link_to post_likes_path(id: t.id, post_id: t.id), method: :post do %>
          <i class="fa-solid fa-apple-whole" style="color: #f9b9c9;"></i><%= t.likes.count %>
         <% end %>
      <% end %>
  <% else %>
  <i class="fa-solid fa-apple-whole" style="color: #fa2934;"></i><%= t.likes.count %>
  <% end %>
      <%= link_to "詳細へ", post_path(t.id) %>
    <% if user_signed_in? && current_user.id == t.user_id %>
      <%= link_to "編集する", edit_post_path(t.id) %>
      <%= button_to "削除する", post_path(t.id), method: :delete %>
    <% end %> 
    </div>
 <% end %>
</div>

